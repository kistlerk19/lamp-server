# Environment configuration for Task Manager Application
DB_HOST={{ db_host }}
DB_NAME={{ db_name }}
DB_USERNAME={{ db_username }}
DB_PASSWORD={{ db_password }}
DB_PORT={{ db_port }}

# Application settings
APP_ENV=production
APP_DEBUG=false
APP_NAME="Task Manager"
APP_URL=http://{{ ansible_default_ipv4.address }}

# Security settings
SESSION_LIFETIME=120
CSRF_PROTECTION=true

# Logging
LOG_LEVEL=warning
LOG_PATH=/var/log/{{ app_name }}/app.log